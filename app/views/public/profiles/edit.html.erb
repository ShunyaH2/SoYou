<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <div class="card shadoe-sm">
      <div class="card-body">
        <h2 class="text-center mb-4">プロフィール編集</h2>

        <%# エラーメッセージ（存在すれば表示） %>
        <%= render "public/users/shared/error_messages", resource: @profile if lookup_context.exists?("public/users/shared/error_messages") %>

        <%= form_with model: [:family, @profile], local: true do |f| %>
          <div class="mb-3">
            <%= f.label :name, "氏名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "例：太郎" %>
          </div>

          <div class="mb-3">
            <%= f.label :birthday, "誕生日", class: "form-label" %>
            <%= f.date_field :birthday, value: @profile.birthday || 10.years.ago.to_date, class: "form-control" %>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to "戻る", family_profiles_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "更新する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
