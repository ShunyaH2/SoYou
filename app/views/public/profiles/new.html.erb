<h1>プロフィール追加</h1>

<%= form_with model: @profile, url: family_profiles_path, local: true do |f| %>
  <div>
    <%= f.label :name, "氏名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :birthday, "誕生日" %><br>
    <%= f.date_field :birthday, value: 10.years.ago.to_date %>
  </div>

  <div class="mt-3">
    <%= f.submit "追加する", class: "btn btn-primary" %>
    <%= link_to "戻る", family_profiles_path, class: "btn btn-secondary" %>
  </div>
<% end %>
