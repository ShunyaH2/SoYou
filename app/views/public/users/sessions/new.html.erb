<div class="row">
  <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="text-center mb-4">Log in</h2>

        <%# Deviseのリソースに紐づくエラーメッセージ（任意：存在するなら表示）%>
        <%= render ("public/users/shared/error_messages", resource: resource) if lookup_context.exists?("public/users/shared/error_messages") %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
              <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Devise既存リンク（パスワード再設定・新規登録 など %>
    <div class="mt-3">
      <%= render "public/users/shared/links" %>
    </div>
  </div>
</div>