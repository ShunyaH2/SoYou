<div class="d-flex justify-content-between align-items-center">
  <h2>投稿一覧</h2>
  <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
</div>

<% if params[:q].present? %>
  <p class="text-muted mt-2">
    検索ワード: <strong><%= h params[:q] %></strong>
    （<%= @posts.size %>件）
  </p>
<% end %>

<%= render "public/posts/table", posts: @posts %>
