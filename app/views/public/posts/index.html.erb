<div class="d-flex justify-content-between align-items-center">
  <h2>投稿一覧</h2>
</div>

<%= paginate @posts, params: request.query_parameters %>

<%= render "shared/post_search_form" %>

<!-- 検索語の表示 -->
<% if params[:q].present? %>
  <p class="text-muted">
    検索中：
    <% if params[:q][:body_cont].present? %>本文「<%= h params[:q][:body_cont] %>」 <% end %>
    <% if params[:q][:profiles_name_cont].present? %>対象者「<%= h params[:q][:profiles_name_cont] %>」 <% end %>
  </p>
<% end %>

<%= render "public/posts/table", posts: @posts %>
