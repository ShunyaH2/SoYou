<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="text-center mb-4">投稿内容</h2>

        <%# エラーメッセージ表示 %>
        <%= render "shared/errors", object: post %>

        <%= form_with model: post, local: true do |f| %>
          <div class="form-group mb-3">
            <%= f.label :occurred_on, "出来事の日付", class: "col-form-label" %>
            <%= f.date_field :occurred_on, class: "form-control", required: true %>
          </div>
          
          <div class="form-group mb-3">
            <%= f.label :body, "エピソード本文", class: "col-form-label" %>
            <%= f.text_area :body, rows: 6, class: "form-control", required: true %>
          </div>

          <%= f.label :occurred_on, "このエピソードの対象", class: "col-form-label" %>
          <fieldset class="border rounded p-3 mb-3">

            <%# 何も選ばれなかったときでも profile_ids パラメータが送られるようにする hidden %>
            <%= hidden_field_tag "post[profile_ids][]","" %>

            <%# 家族のプロフィールをチェックボックスで列挙 %>
            <div class="d-flex flex-wrap align-items-center">
              <% current_user.family.profiles.each do |p| %>
                <div class="form-check mx-2">
                  <%= check_box_tag "post[profile_ids][]", p.id, post.profile_ids.include?(p.id), class: "form-check-input", id: "profile_#{p.id}" %>
                  <%= label_tag "profile_#{p.id}", p.name, class: "form-check-label" %>
                </div>
              <% end %>
            </div>
          </fieldset>

          <div class="form-group mb-4">
            <%= f.label :tag_names, "性格タグ（カンマ区切り）" %>
            <%= f.text_field :tag_names,
                  value: @post.tag_names,
                  class: "form-control",
                  placeholder: "例）慎重、優しさ、忍耐力" %>
            <small class="text-muted">
              カンマで区切って入力（最大10件）
            </small>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to "戻る", posts_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
