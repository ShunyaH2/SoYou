<%= render "shared/errors", object: post %>

<%= form_with model: post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :occurred_on, "出来事の日付" %>
    <%= f.date_field :occurred_on, class: "form-control", required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :body, "エピソード本文" %>
    <%= f.text_area :body, rows: 6, class: "form-control", required: true %>
  </div>

  <fieldset class="mt-3">
    <legend>このエピソードの対象</legend>

    <%# 何も選ばれなかったときでも profile_ids パラメータが送られるようにする hidden %>
    <%= hidden_field_tag "post[profile_ids][]","" %>

    <%# 家族のプロフィールをチェックボックスで列挙 %>
    <% current_user.family.profiles.each do |p| %>
      <label class="d-inline-block me-2 mb-2">
        <!-- 第3引数：チェック済みか（既存の @post に対して） -->
        <%= check_box_tag "post[profile_ids][]", p.id, post.profile_ids.include?(p.id) %>
        <span class="badge bg-info"><%= p.name %></span>
      </label>
    <% end %>
  </fieldset>

  <%= f.submit class: "btn btn-primary mt-3" %>
<% end %>

