<%= form_with model: [:admin, @tag], local: true do |f| %>
  <% if @tag.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @tag.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "タグ名", class: "col-form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group form-check">
    <%= f.check_box :active, class: "form-check-input", id: "tag_active" %>
    <%= f.label :active, "有効化", class: "form-check label" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "一覧へ戻る", admin_tags_path, class: "btn-btn-outline-secondary" %>
    <%= f.submit (@tag.persisted? ? "更新する" : "作成する"), class: "btn btn-primary" %>
  </div>
<% end %>