<h1>投稿編集</h1>

<%= form_with model: [:admin, @post], local: true do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @post.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, rows: 8, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "更新する", class: "btn btn-primary" %>
    <%= link_to "キャンセル", admin_post_path(@post), class: "btn btn-secondary" %>
  </div>
<% end %>
